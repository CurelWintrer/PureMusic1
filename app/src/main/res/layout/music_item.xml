<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:theme="@style/AppTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/MusicListImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/music_item"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/MusicListName"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="This is music name"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:focusable="true"
        app:layout_constraintEnd_toStartOf="@+id/SelectMusic"
        app:layout_constraintStart_toEndOf="@+id/MusicListImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MusicListArtistName"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:text="This is Artist Name"
        android:textColor="?attr/colorPrimary"
        android:textSize="13dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:focusable="true"
        app:layout_constraintEnd_toStartOf="@+id/SelectMusic"
        app:layout_constraintStart_toEndOf="@+id/MusicListImage"
        app:layout_constraintTop_toBottomOf="@+id/MusicListName" />

    <ImageButton
        android:id="@+id/SelectMusic"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:src="@drawable/select"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>